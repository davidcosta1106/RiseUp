@model IEnumerable<Rise_Up_API.Modules.Collection_Points>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.collection_point_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.postal_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.district)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.number_door)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.inicial_hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.week_days)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.collection_point_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postal_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.district)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.number_door)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inicial_hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.week_days)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_collection_point">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_collection_point">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_collection_point">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
